             tal:define="fn string:author; field python:here.getField(fn)">
            <strong tal:content="python: field.widget.Label(here)" />:
            <metal:fieldMacro use-macro="python: here.widget(fn, mode=mode)" />
        </div>
        <div class="publicationField"
             tal:condition="here/getPublication_date"
             tal:define="fn string:publication_date; field python:here.getField(fn)">

            <strong tal:content="python: field.widget.Label(here)" />:
            <span tal:replace="python:toLocalizedTime(here.getPublication_date())"/>
        </div-->

        <div class="publicationField"
             tal:define="icon here/file/getBestIcon | nothing"
             tal:condition="here/get_size">

            <a href="" tal:attributes="href string:${here/absolute_url}">
                <strong i18n:domain="Publications" i18n:translate="label_download_full_publication">Download the full publication as PDF</strong>
                <img tal:condition="icon" src=""
                     tal:attributes="src string:${here/portal_url}/$icon"/>
            </a>
            <tal:size content="structure python:'&nbsp; (%s KB)' % (here.get_size() / 1024)">0Kb</tal:size>
        </div>


        <!--div tal:condition="here/getOrder_id"
